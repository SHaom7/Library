@model Book

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter the book title">
    </div>
    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input asp-for="Author" class="form-control" placeholder="Enter the book author">
    </div>
    <div class="form-group">
        <label asp-for="Brief">Brief</label>
        <input asp-for="Brief" class="form-control" placeholder="Write a brief about the book">
    </div>
    <div class="form-group">
        <label asp-for="Copies">Copies</label>
        <input asp-for="Copies" class="form-control" placeholder="Enter number of copies">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>